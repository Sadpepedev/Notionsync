# Notion Configuration

NOTION_TOKEN=secret_your_notion_integration_token_here
NOTION_DATABASE_ID=your_database_id_here

# Database Configuration

DB_TYPE=postgresql  # Options: postgresql, mysql, mongodb, sqlite

# For PostgreSQL/MySQL

DB_HOST=localhost
DB_PORT=5432  # 5432 for PostgreSQL, 3306 for MySQL
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# For MongoDB

MONGO_CONNECTION_STRING=mongodb://username:password@host:port/database
DB_COLLECTION=fud_outreach_tracker

# For SQLite

SQLITE_DB_PATH=./database.db

# Optional: Custom query (defaults to selecting all unsynced records)

DB_QUERY=SELECT uid, name, status, reviewer_name, review_date, next_follow_up, date_added, platform, socials FROM fud_outreach_tracker

# Logging level (DEBUG, INFO, WARNING, ERROR)

LOG_LEVEL=INFO
